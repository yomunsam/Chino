@page
@model Chino.IdentityServer.Pages.Dashboard.Role.DeleteModel
@inject IStringLocalizer<Chino.IdentityServer.Pages.Dashboard.Role.DeleteModel> L 
@{
    Layout = "_DashboardLayout";
    ViewData["pageName"] = "roles";
}


<div class="mt-3 container">
    <div class="card col-lg-6">
        <div class=" card-header">
            @L["header_delrole"]
        </div>

        <div class="card-body">
            <partial name="ValidationSummary" />

            <form method="post">
                <input asp-for="ReturnUrl" class="visually-hidden" />
                <input asp-for="RoleId" class="visually-hidden" />

                <fieldset disabled>
                    <label asp-for="RoleName" class="form-label">@L["label_roleName"]</label>
                    <input asp-for="RoleName" class="form-control" />
                </fieldset>

                <button type="submit" class="btn btn-danger mt-2">@L["btn_delete"]</button>
            </form>
        </div>
    </div>
</div>